# Development Environment Configuration
# This file contains non-sensitive configuration values for development

# Orleans Configuration
ORLEANS_SERVICE_ID=sportsbook-silo
ORLEANS_CLUSTER_ID=sportsbook-dev
ORLEANS_ENVIRONMENT=Development

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Logging Configuration
Logging__LogLevel__Default=Debug
Logging__LogLevel__Orleans=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__SportsbookLite=Debug

# Orleans Dashboard
Orleans__Dashboard__Enabled=true
Orleans__Dashboard__Port=8080

# Swagger Configuration
Swagger__Enabled=true

# Health Checks
HealthChecks__Enabled=true
HealthChecks__Port=30000

# CORS Configuration (permissive for development)
CORS__AllowCredentials=true
CORS__AllowedOrigins__0=http://localhost:3000
CORS__AllowedOrigins__1=http://localhost:5173
CORS__AllowedOrigins__2=http://localhost:8080

# Performance Settings
Orleans__GrainCollectionAge=2m
Orleans__ResponseTimeout=30s

# Development Database Settings (non-sensitive)
Database__CommandTimeout=30
Database__MaxRetryCount=3
Database__MaxRetryDelay=00:00:30

# Redis Clustering Configuration
USE_REDIS_CLUSTERING=true
REDIS_CLUSTERING_ENABLED=true

# Container Detection
DOTNET_RUNNING_IN_CONTAINER=true