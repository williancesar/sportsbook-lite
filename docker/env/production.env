# Production Environment Configuration
# This file contains non-sensitive configuration values for production

# Orleans Configuration
ORLEANS_SERVICE_ID=sportsbook-silo
ORLEANS_CLUSTER_ID=sportsbook-production
ORLEANS_ENVIRONMENT=Production

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Logging Configuration (minimal for production)
Logging__LogLevel__Default=Warning
Logging__LogLevel__Orleans=Warning
Logging__LogLevel__Microsoft=Error
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__SportsbookLite=Information

# Orleans Dashboard (disabled for security)
Orleans__Dashboard__Enabled=false

# Swagger Configuration (disabled for security)
Swagger__Enabled=false

# Health Checks
HealthChecks__Enabled=true
HealthChecks__Port=30000

# CORS Configuration (restrictive for production)
CORS__AllowCredentials=false
CORS__AllowedOrigins__0=https://sportsbook.example.com

# Performance Settings (optimized for production)
Orleans__GrainCollectionAge=15m
Orleans__ResponseTimeout=30s
Orleans__MaxRequestProcessingTime=00:01:30
Orleans__CollectionAgeLimit=2h

# Database Settings (optimized for production)
Database__CommandTimeout=120
Database__MaxRetryCount=5
Database__MaxRetryDelay=00:01:00
Database__EnableSensitiveDataLogging=false
Database__EnableDetailedErrors=false

# Connection Pool Settings
Database__MaxPoolSize=100
Database__MinPoolSize=10
Database__ConnectionLifetime=300

# Monitoring and Observability
OpenTelemetry__Enabled=true
OpenTelemetry__ServiceName=sportsbook-production
Metrics__Enabled=true
Tracing__SamplingRatio=0.1

# Security Headers
Security__EnableStrictTransportSecurity=true
Security__EnableContentSecurityPolicy=true
Security__EnableReferrerPolicy=true

# Rate Limiting (more restrictive for production)
RateLimit__PermitLimit=500
RateLimit__Window=00:01:00
RateLimit__ReplenishmentPeriod=00:00:10
RateLimit__QueueLimit=50

# Circuit Breaker Settings
CircuitBreaker__HandledEventsAllowedBeforeBreaking=5
CircuitBreaker__DurationOfBreak=00:00:30
CircuitBreaker__ExceptionsAllowedBeforeBreaking=3

# Caching Settings
Cache__DefaultExpiration=00:15:00
Cache__SlidingExpiration=00:05:00