# Staging Environment Configuration
# This file contains non-sensitive configuration values for staging

# Orleans Configuration
ORLEANS_SERVICE_ID=sportsbook-silo
ORLEANS_CLUSTER_ID=sportsbook-staging
ORLEANS_ENVIRONMENT=Staging

# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Staging
ASPNETCORE_URLS=http://+:8080

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Orleans=Information
Logging__LogLevel__Microsoft=Warning
Logging__LogLevel__Microsoft.AspNetCore=Information
Logging__LogLevel__SportsbookLite=Information

# Orleans Dashboard (enabled for staging monitoring)
Orleans__Dashboard__Enabled=true
Orleans__Dashboard__Port=8080

# Swagger Configuration (enabled for staging API testing)
Swagger__Enabled=true

# Health Checks
HealthChecks__Enabled=true
HealthChecks__Port=30000

# CORS Configuration (more restrictive for staging)
CORS__AllowCredentials=false
CORS__AllowedOrigins__0=https://staging.sportsbook.example.com

# Performance Settings
Orleans__GrainCollectionAge=5m
Orleans__ResponseTimeout=30s
Orleans__MaxRequestProcessingTime=00:01:00

# Database Settings
Database__CommandTimeout=60
Database__MaxRetryCount=3
Database__MaxRetryDelay=00:00:30
Database__EnableSensitiveDataLogging=false

# Monitoring and Observability
OpenTelemetry__Enabled=true
OpenTelemetry__ServiceName=sportsbook-staging
Metrics__Enabled=true

# Rate Limiting
RateLimit__PermitLimit=1000
RateLimit__Window=00:01:00
RateLimit__ReplenishmentPeriod=00:00:10
RateLimit__QueueLimit=100