{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Orleans": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Orleans.Runtime.Management": "Warning",
        "Orleans.Runtime.Placement": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithEnvironmentName",
      "WithMachineName",
      "WithProcessId",
      "WithProcessName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "service_name",
              "value": "sportsbook-host"
            },
            {
              "key": "environment",
              "value": "development"
            },
            {
              "key": "application",
              "value": "sportsbooklite"
            }
          ],
          "propertiesAsLabels": [
            "level"
          ],
          "batchPostingLimit": 1000,
          "queueLimit": 10000,
          "period": "00:00:05",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Properties": {
      "Application": "SportsbookLite.Host"
    }
  },
  "Orleans": {
    "ClusterId": "sportsbook-dev",
    "ServiceId": "sportsbook-silo"
  },
  "ConnectionStrings": {
    "Database": "Host=localhost;Database=sportsbook;Username=dev;Password=dev123",
    "Redis": "localhost:6379"
  }
}